create table event_subtasks(id int not null auto_increment, event_id int(11) not null, title varchar(250), emp_id int(11) not null, status varchar(50), date_from datetime, date_to datetime, date_start datetime, date_end datetime, is_new boolean default true, task_counter int(11) default 0, code varchar(250), primary key (id));


create table event_subtasks_comment(id int not null auto_increment, task_id int(11) not null, remarks varchar(250), posted_date datetime, posted_by int(11) not null, primary key (id));

create table event_programs(id int(11), code varchar(50), name varchar(250), primary key(id));


